<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/Model">
        <service class="Transoft\Blog\Api\ModelRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Transoft_Blog::model"/>
        </resources>
    </route>
    <route url="/V1/Model" method="POST">
        <service class="Transoft\Blog\Api\ModelRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Transoft_Blog::model"/>
        </resources>
    </route>
    <route url="/V1/Model/:id" method="PUT">
        <service class="Transoft\Blog\Api\ModelRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Transoft_Blog::model"/>
        </resources>
    </route>
</routes>
